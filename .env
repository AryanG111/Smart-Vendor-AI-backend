# .env file

# Your Server Name (found in SSMS login screen)
# Note: For local express, it often requires double backslashes in some contexts, 
# but for this config, a single backslash usually works.
DB_SERVER=localhost\SQLEXPRESS

DB_NAME=SmartVendorDB

# If using Windows Authentication (Trusted Connection):
# You don't need user/pass, but connection string changes slightly.
# For this project, we used UID/PWD in config.py. 
# To setup a user in SSMS:
# 1. Security -> Logins -> Right Click -> New Login -> SQL Server Auth
DB_USER=roo
DB_PASS=root    

# Security
API_KEY=my-super-secret-admin-key